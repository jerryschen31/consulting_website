<nav
  class="flex flex-col sm:flex-row w-full justify-between items-center px-4 sm:px-6 py-1 bg-white sm:bg-transparent shadow sm:shadow-none">
  <div
    class="w-full sm:w-auto self-start sm:self-center flex flex-row sm:flex-none flex-no-wrap justify-between items-center">
    <a href="/" class="no-underline tracking-wide font-bold text-purple-600 text-2xl mb-6 silentborder">Jerry Chen &nbsp <span class="text-gray-800 tracking tracking-widest">Bioinformatics Consulting</span></a>
    <button id="menuBtn" class="hamburger block sm:hidden focus:outline-none" type="button" onclick="navToggle();" aria-label="Show Menu"><span
        class="hamburger__top-bun"></span><span class="hamburger__bottom-bun"></span></button>
  </div>
  <div id="menu"
    class="w-full sm:w-auto self-end sm:self-center hidden sm:flex flex-col sm:flex-row items-center h-full py-1 pb-4 sm:py-0 sm:pb-0">
    <!-- Services -->
    <a class="text-gray-800 hover:text-purple-600 text-lg text-center w-full no-underline sm:w-auto sm:px-4 py-2 sm:py-1"
      href="{% if isFront %}#services{% else %}{{ site.baseURL }}/#services{% endif %}">Services</a>
    <!-- About -->
    <span id="follow"
      class="hidden sm:inline-block text-gray-800 hover:text-purple-600 text-lg sm:w-auto sm:px-4 sm:py-1 cursor-pointer">About&nbsp&nbsp</span>
    {% for item in site.social %}
      <a href="{{ item.url }}"
        class="text-gray-800 font-bold hover:text-purple-600 text-lg text-center w-full no-underline sm:hidden py-2"
        target="_blank" rel="noopener">{{ item.title }}</a>
    {% endfor %}
    <!-- Clients -->
    <a class="text-gray-800 hover:text-purple-600 text-lg text-center w-full no-underline sm:w-auto sm:pr-4 py-2 sm:py-1"
      href="{% if isFront %}#about{% else %}{{ site.baseURL }}/#clients{% endif %}">Clients</a>
    <a class="text-gray-800 border font-bold border-indigo-800 text-lg bg-purple-200 rounded-full w-auto no-underline text-center sm:text-left hover:border-purple-600 hover:text-purple-600 hover:bg-white hover:shadow-md px-6 py-1 my-2 sm:my-0 sm:ml-4"
      href="{% if isFront %}#register{% else %}{{ site.baseURL }}/#register{% endif %}">Free Consultation</a>
  </div>
</nav>
